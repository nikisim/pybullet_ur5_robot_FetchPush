<?xml version="1.0"?>
<robot name="cylinder_puck">

  <link name="puck">
    <visual>
      <geometry>
        <cylinder radius="0.04" length="0.025"/> <!-- Radius and height of the puck -->
      </geometry>
      <material name="blac">
        <color rgba="0 0 0 1"/> <!-- Red color -->
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.04" length="0.025"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/> <!-- Mass in kg -->
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0002"/>
    </inertial>
  </link>

</robot>
